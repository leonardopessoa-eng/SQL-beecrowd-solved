WITH final_table AS (
    
    SELECT
        name,
        customers_number
    FROM lawyers
    WHERE customers_number IN (SELECT MAX(customers_number) FROM lawyers)
    
    UNION ALL
    
    SELECT
        name,
        customers_number
    FROM lawyers
    WHERE customers_number IN (SELECT MIN(customers_number) FROM lawyers)
    
    UNION ALL
    
    SELECT
        'Average' as name,
        ROUND(AVG(customers_number),0) 
    FROM lawyers
    
)

SELECT * FROM final_table
